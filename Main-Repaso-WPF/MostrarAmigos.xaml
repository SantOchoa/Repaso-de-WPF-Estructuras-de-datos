<Window x:Class="Main_Repaso_WPF.MostrarAmigos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main_Repaso_WPF"
        mc:Ignorable="d"
        Title="MostrarAmigos" Height="450" Width="800">
    <Grid>
        <ComboBox Name="nameusers" HorizontalAlignment="Center" Height="22" Margin="0,27,0,0" VerticalAlignment="Top" Width="366" SelectionChanged="nameusers_SelectionChanged"/>
        <DataGrid Name="amigostabla" HorizontalAlignment="Left" Height="242" Margin="66,92,0,0" VerticalAlignment="Top" Width="642" AutoGenerateColumns="True"/>
        <TextBlock x:Name="numami" HorizontalAlignment="Left" Height="25" Margin="66,49,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="75"/>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="162,74,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="94"/>

    </Grid>
</Window>
